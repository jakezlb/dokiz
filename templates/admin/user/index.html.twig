{% extends 'admin/base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    {{ include("admin/header.html.twig") }} 
    {{ include("navigation/navAdmin.html.twig") }}
     
        <div class="row">
            <div class="col-sm-6">
                <h1>Liste des utilisateurs</h1>
            </div>
            <div class="col-sm-6">
                <a class="btn btn-primary float-right" href="{{ path('admin_user_new') }}">Ajouter un utilisateur</a>
            </div>
        </div>
        <table id="tableAdmin" class="display">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Email</th>
                    <th>Rôles</th>
                    <th>Poste de travail</th>
                    <th>Société</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>{{ user.email }}</td>
                    <td>                    
                        {% for role in user.roles %}
                            {% if role == "ROLE_USER" %}
                                Utilisateur
                            {% elseif role == "ROLE_SUPERADMIN" %}
                                Super Admin
                            {% elseif role == "ROLE_ADMIN" %}
                                Administrateur
                            {% endif %}
                        {% endfor %}
                    </td>
                    <td>{{ user.job }}</td>
                    <td>{{ user.society }}</td>
                    <td>
                        <td><a href="{{ path('admin_user_edit', {'id': user.id}) }}"><i class="fa fa-pencil" aria-hidden="true"></i></a></td>                  
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">Aucun utilisateur</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>   
    {{ include("admin/footer.html.twig") }} 
{% endblock %}
