{% extends 'base.html.twig' %}

{% block title %}Job index{% endblock %}

{% block body %}
    {{ include("navigation/navAdmin.html.twig") }}
    {{ include("admin/header.html.twig") }}    
        <h1>Job index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Wording</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for job in jobs %}
                <tr>
                    <td>{{ job.id }}</td>
                    <td>{{ job.wording }}</td>
                    <td>
                        <a href="{{ path('admin_job_show', {'id': job.id}) }}">show</a>
                        <a href="{{ path('admin_job_edit', {'id': job.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('admin_job_new') }}">Create new</a>
    {{ include("admin/footer.html.twig") }} 
{% endblock %}
