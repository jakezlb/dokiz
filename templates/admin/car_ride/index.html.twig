{% extends 'base.html.twig' %}

{% block title %}Trajets{% endblock %}

{% block javascripts %}
<script>
    $(document).ready(function() {
        $('#tabCarRide').DataTable({
            "language": {
                "sEmptyTable":     "Aucune donnée disponible dans le tableau",
                "sInfo":           "Affichage des éléments _START_ à _END_ sur _TOTAL_ éléments",
                "sInfoEmpty":      "",
                "sInfoFiltered":   "(filtré à partir de _MAX_ éléments au total)",
                "sInfoPostFix":    "",
                "sInfoThousands":  ",",
                "sLengthMenu":     "Afficher _MENU_ éléments",
                "sLoadingRecords": "Chargement...",
                "sProcessing":     "Traitement...",
                "sSearch":         "Rechercher :",
                "sZeroRecords":    "Aucun élément correspondant trouvé",
                "oPaginate": {
                    "sFirst":    "Premier",
                    "sLast":     "Dernier",
                    "sNext":     "Suivant",
                    "sPrevious": "Précédent"
                },
                "oAria": {
                    "sSortAscending":  ": activer pour trier la colonne par ordre croissant",
                    "sSortDescending": ": activer pour trier la colonne par ordre décroissant"
                },
                "select": {
                    "rows": {
                        "_": "%d lignes sélectionnées",
                        "0": "Aucune ligne sélectionnée",
                        "1": "1 ligne sélectionnée"
                    }
                }
            }
        });
    } );
</script>
{% endblock %}

{% block body %}
{{ include("navigation/navAdmin.html.twig") }}
{{ include("admin/header.html.twig") }}       
        <table class="table" id="tabCarRide">
        <thead>
            <tr>
                <th>Départ</th>
                <th>Arrivée</th>
                <th>Date de début</th>
                <th>Date d'arrivée</th>
                <th>Statut</th>
                <th>Nombre de KM</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% if car_rides %}
        {% for car_ride in car_rides %}
            <tr>
                <td>{{ car_ride.adressPointDeparture }} {{ car_ride.postalCodePointDeparture }} {{ car_ride.cityPointDeparture }}</td>
                <td>{{ car_ride.adressPointArrival }} {{ car_ride.postalCodePointArrival }} {{ car_ride.cityPointArrival }}</td>
                <td>{{ car_ride.dateStart ? car_ride.dateStart|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ car_ride.dateEnd ? car_ride.dateEnd|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ car_ride.status }}</td>
                <td>{{ car_ride.kmNumber }}</td>
                <td>
                    <a href="{{ path('admin_car_ride_show', {'id': car_ride.id}) }}">show</a>
                   
                </td>
            </tr>
        {% endfor %}
        {% else %}
            <tr>
                <td colspan="10">Il n'y a pas de trajets.</td>
            </tr>
        {% endif %}
        </tbody>
    </table>
{{ include("admin/footer.html.twig") }}   
{% endblock %}

