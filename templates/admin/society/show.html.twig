{% extends 'admin/base.html.twig' %}

{% block title %}Society{% endblock %}

{% block body %}
    {{ include("admin/header.html.twig") }}
    {{ include("navigation/navAdmin.html.twig") }}
     
        <h1>Information {{ society.socialReason }}</h1>
        <div class="container list-card-society bg-white">                       
            <div class="row">
                <div class="col-sm-6 offset-sm-3">
                    <div class="card-society">
                        <div class="item">
                            <div class="row">
                                <div class="col-sm-7">
                                    <p>Identifant de la société : </p>
                                </div>
                                <div class="col-sm-5 text-left">
                                    <p>{{ society.id }}</p>
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <div class="row">
                                <div class="col-sm-7">
                                    <p>Siret : </p>
                                </div>
                                <div class="col-sm-5 text-left">
                                    <p>{{ society.siret }}</p>
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <div class="row">
                                <div class="col-sm-7">
                                    <p>Raison Sociale : </p>
                                </div>
                                <div class="col-sm-5 text-left">
                                    <p>{{ society.socialReason }}</p>
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <div class="row">
                                <div class="col-sm-7">
                                    <p>Adresse du Siege : </p>
                                </div>
                                <div class="col-sm-5 text-left">
                                    <p>{{ society.headOffice }}</p>
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <div class="row">
                                <div class="col-sm-7">
                                    <p>Code postal : </p>
                                </div>
                                <div class="col-sm-5 text-left">
                                    <p>{{ society.postalCode }}</p>
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <div class="row">
                                <div class="col-sm-7">
                                    <p>Email interlocuteur : </p>
                                </div>
                                <div class="col-sm-5 text-left">
                                    <p>{{ society.emailInterlocutor }}</p>
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <div class="row">
                                <div class="col-sm-7">
                                    <p>Téléphone interlocuteur : </p>
                                </div>
                                <div class="col-sm-5 text-left">
                                    <p>{{ society.telInterlocutor }}</p>
                                </div>
                            </div>
                        </div>                       
                    </div>
                </div>
            </div>  
        </div>
        
        <a class="btn btn-primary text-white" href="{{ path('admin_society_index') }}">Retour</a>
        <a class="btn btn-secondary  text-white" href="{{ path('admin_society_edit', {'id': society.id}) }}">Modifier</a>

        {{ include('admin/society/_delete_form.html.twig') }}
    {{ include("admin/footer.html.twig") }} 
{% endblock %}
