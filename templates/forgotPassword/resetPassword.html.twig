{% extends 'base.html.twig' %}

{% block title %}Nouveau mot de passe{% endblock %}

{% block body %}
    <header class="masthead" id="dokiz">
        <div class="container d-flex h-100 align-items-center">
            <div class="mx-auto text-center ">
                <img src="{{ asset('image/Blanc.png') }}" title="source: imgur.com" class="img-fluid" alt=""
                     style="width:60%;">
                <h1 style="font-size: 25px; line-height: 4rem">RÃ©initialisation du mot de passe</h1>
                <p class="small text-greyLight" >Veuillez entrer votre nouveau mot de passe ci-dessous.</p>
                <form method="post">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend" style="width: 25%; text-align: center" >
                                        <label for="inputPassword" class="input-group-text" id="basic-addon3" style="width: 100%;">Mot de passe*</label>
                                    </div>
                                    <input class="form-control" type="password" name="password" id="inputPassword" placeholder="Mot de passe" required>
                                    <input type="hidden" name="token" value="{{ token }}">
                                </div>
                            </div>
                        </div>                          
                    <div>
                    <br><br>
                    <button type="submit" id="valider" class="btn btn-secondary">
                        Valider
                    </button>
                </form>
            </div>
        </div>
    </header>

{% endblock %}
