{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    <header class="masthead" id="dokiz">
        <div class="container d-flex h-100 align-items-center">
            <div class="mx-auto text-center ">
                <img src="{{ asset('image/Blanc.png') }}" title="source: imgur.com" class="img-fluid" alt=""
                     style="width:60%;">
                <h1 style="font-size: 32px; line-height: 4rem">Récupération du mot de passe</h1>
                <form method="post" class="">
                    <hr>
                    {{ form(emailForm) }}
                    <hr>
                    <a class="btn btn-lg btn-success btn-block" href="{{ path('index') }}">Retour</a>
                </form>
            </div>
        </div>
    </header>

{% endblock %}
