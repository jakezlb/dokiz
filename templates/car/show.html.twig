{% extends 'base.html.twig' %}

{% block title %}Car{% endblock %}

{% block body %}
    <h1>Car</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ car.id }}</td>
            </tr>
            <tr>
                <th>Immatriculation</th>
                <td>{{ car.immatriculation }}</td>
            </tr>
            <tr>
                <th>Place_number</th>
                <td>{{ car.placeNumber }}</td>
            </tr>
            <tr>
                <th>Fuel</th>
                <td>{{ car.fuel }}</td>
            </tr>
            <tr>
                <th>Date_commissioning</th>
                <td>{{ car.dateCommissioning ? car.dateCommissioning|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Level_fuel</th>
                <td>{{ car.levelFuel }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('car_index') }}">back to list</a>

    <a href="{{ path('car_edit', {'id': car.id}) }}">edit</a>

    {{ include('car/_delete_form.html.twig') }}
{% endblock %}
