{{ form_start(form) }}

<div class="row">
    <div class="col-sm-6">
        <div class="form-group">
            {{ form_label(form.lastName, 'Nom *', {'label_attr': {'class': 'label_control'}}) }}
            {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
        </div>       
        <div class="form-group">
            {{ form_label(form.firstName, 'Prénom *', {'label_attr': {'class': 'label_control'}}) }}
            {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.email, 'Email *', {'label_attr': {'class': 'label_control'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.phone, 'Téléphone *', {'label_attr': {'class': 'label_control'}}) }}
            {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="col-sm-6">        
        <div class="form-group">  
            {{ form_label(form.password.first, 'Mot de passe *', {'label_attr': {'class': 'label_control'}}) }}
            {{ form_widget(form.password.first, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.password.second, 'Confirmer votre mot de passe *', {'label_attr': {'class': 'label_control'}}) }}
            {{ form_widget(form.password.second, {'attr': {'class': 'form-control'}}) }}          
        </div>
        <small class="obligatory-field">* Champ obligatoire</small>
        <div class="text-center">  
            <button class="btn btn-primary">{{ button_label|default('Créer') }}</button>
        </div>
        
    </div>
</div>

{{ form_end(form) }}
